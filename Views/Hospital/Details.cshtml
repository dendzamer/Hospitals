@model Hospitals.Models.Hospital

@{
    ViewData["Title"] = "Hospital review";
}

<h1>Hospital info and reviews</h1>

<div>
    <h4>Hospital</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Zip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zip)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewsCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewsCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerId)
        </dd>
    </dl>
</div>
<h2>Reviews:</h2>
<a asp-controller="Review" asp-action="Create" asp-route-HospitalID="@Model.HospitalID">Add review for this hospital</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Department
            </th>
            <th>
                Speciality
            </th>
            <th>
                Salary
            </th>
            <th>
                Date
            </th>
            <th>
                Rating
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reviews)
        {
    <tr>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Department)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Speciality)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Salary)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rating)
    </td>
    <td>
        <a asp-controller="Review" asp-action="Edit" asp-route-id="@item.ReviewID">Edit</a> |
        <a asp-controller="Review" asp-action="Details" asp-route-id="@item.ReviewID">Read Review</a> |
        <a asp-controller="Review" asp-action="Delete" asp-route-id="@item.ReviewID">Delete</a>
    </td>
</tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.HospitalID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
