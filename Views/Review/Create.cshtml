@model Hospitals.Models.Review

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <select asp-for="Department" class="form-control" asp-items="ViewBag.departments"></select>
            </div>
            <div class="form-group">
                <label asp-for="Speciality" class="control-label"></label>
                <input asp-for="Speciality" class="form-control" />
                <span asp-validation-for="Speciality" class="text-danger"></span>
            </div>

                <br />
                <input id="Travel-Nurse" type="radio" name="EmploymentType" value="Travel Nurse" checked />
                <label for="Travel-Nurse">Travel Nurse</label>
                <br />

                <input id="Staff-Nurse" type="radio" name="EmploymentType" value="Staff Nurse" />
                <label for="Staff-Nurse">Staff Nurse</label>
                <br />
                <br />

            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <select asp-for="Salary" class="form-control" asp-items="ViewBag.salaries"></select>
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agency" class="control-label"></label>
                <input asp-for="Agency" class="form-control" />
                <span asp-validation-for="Agency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewText" class="control-label"></label>
                <textarea asp-for="ReviewText" class="form-control" cols="50" rows="6"></textarea>
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>
                @* <div class="form-group">
                    <label asp-for="HospitalID" class="control-label"></label>
                    <select asp-for="HospitalID" class="form-control" asp-items="ViewBag.HospitalID"></select>
                    </div> *@

                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <select asp-for="Rating" class="form-control" asp-items="ViewBag.ratings"></select>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
            @* <div class="form-group">
                <label for="ReviewText" class="control-label">Review Text:</label>
                <textarea id="ReviewText" name="ReviewText" rows="4" cols="50" class="form-control">
                </div> *@
            <div class="form-group" hidden="true">
                <label for="HospitalID" class="control-label">HospitalID</label>
                <input type="text" id="HospitalID" name="HospitalID" class="form-control" value="@ViewBag.HospitalID" readonly="true"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

